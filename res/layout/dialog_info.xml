<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        >
        
        <ProgressBar 
            android:id="@+id/bar_loading_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        
        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#f0f0f0f0"
            android:text="@string/info1"
            android:textColor="@color/holo_blue1"
            android:textSize="15sp" />

    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/holo_blue1" />
    
    <TextView 
        android:id="@+id/tv_info_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="类型："
        />
    
    <TextView 
        android:id="@+id/tv_info_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="位置："
        />
    
    <TextView 
        android:id="@+id/tv_info_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="大小："
        />
    
    <TextView 
        android:id="@+id/tv_info_include"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="包含："
        />
    
    <View 
        android:id="@+id/info_divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#b2b2b2"
        />
    
    <TextView 
        android:id="@+id/tv_info_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="最后修改时间："
        />
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d1d1d1"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
    
    <TextView 
        android:id="@+id/btn_info_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg"
        android:gravity="center"
        android:text="@string/ok"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:visibility="gone"
        />
</LinearLayout>