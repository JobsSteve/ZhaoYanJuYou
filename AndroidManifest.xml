        </activity>
        <activity
            android:name="com.zhaoyan.juyou.activity.AccountSettingActivity"
            android:theme="@style/Theme.Translucent" >
        </activity>
        <activity
            android:name="com.zhaoyan.juyou.activity.InviteActivity"
            android:theme="@style/Theme.Translucent" >
