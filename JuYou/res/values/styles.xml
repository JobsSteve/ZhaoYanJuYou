<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomTheme.NoTitleBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="login_input">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff59616b</item>
        <item name="android:textColorHint">#ffb0b0b0</item>
        <item name="android:background">@drawable/login_edittext_selector</item>
        <item name="android:paddingLeft">55.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="login_label">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff59616b</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">15.0dip</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff59616b</item>
        <item name="android:textColorHint">#ffb0b0b0</item>
        <item name="android:background">@drawable/login_edittext_selector</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edit_text_signature">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff59616b</item>
        <item name="android:textColorHint">#ffb0b0b0</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">top</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="edit_text_label">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff59616b</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
    </style>

    <style name="edit_text_input_limit">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff59616b</item>
    </style>

    <style name="Theme.Translucent" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="Custom.ProgressBar.Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>

    <style name="Custom_Dialog">
        <item name="android:windowBackground">@drawable/dialog_full_holo_light</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="ActivityAnimation">
        <item name="android:windowEnterAnimation">@anim/activity_right_in</item>
        <item name="android:windowExitAnimation">@anim/activity_right_out</item>
    </style>

    <style name="MultiChoiceAdapter_DefaultSelectedItemStyle">
        <item name="itemClickInActionMode">selectItem</item>
    </style>

    <style name="MultiChoiceAdapter_DefaultCheckableImageViewStyle">
        <item name="android:foreground">@drawable/gallery_selector</item>
    </style>
    
    <style name="Widget.Sherlock.TextView.Holo.ListSeparator" parent="@android:style/Widget.TextView">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/abs__list_section_divider_holo_dark</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="Widget.Sherlock.TextView.Holo.ListSeparator.Light">
        <item name="android:background">@drawable/abs__list_section_divider_holo_light</item>
        <item name="android:textColor">#ff33b5e5</item>
    </style>

</resources>